<h2>Forget Password</h2>
<form action="/forgetpass" method="post">
    <% if(messages.error){ %>
        <span style="color: red;">
            <%= messages.error %>
        </span>
    <% } %>
    <div>
        <label for="email">Email : </label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <input type="submit" value="Send Email">
    </div>