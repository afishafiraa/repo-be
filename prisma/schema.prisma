// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique 
  name String 
  password String
  profile Profile?
  bankAccount BankAccount[]
}

model Profile {
  id Int @id @default(autoincrement())
  identify_type String
  identify_number String
  address String
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

model BankAccount {
  id Int @id @default(autoincrement())
  bank_name String
  account_number String @unique
  balance Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int 
  transactionSource Transaction[] @relation("source")
  transactionDestination Transaction[] @relation("destination")
}

model Transaction {
  id Int @id @default(autoincrement())
  source_account_id Int
  destination_account_id Int
  amount Float
  type String
  trx_date DateTime
  sourceAccount BankAccount @relation( name: "source", fields: [source_account_id], references: [id])
  destinationAccount BankAccount @relation( name: "destination", fields: [destination_account_id], references: [id])
}